{
  "name": "stencila-convert",
  "version": "0.29.3",
  "description": "Converters for Stencila components",
  "main": "src/index.js",
  "bin": "./bin/stencila-convert.js",
  "scripts": {
    "postinstall": "node src/helpers",
    "lint": "standard",
    "test": "tape \"tests/**/*.test.js\" | tap-spec",
    "test-one": "tape",
    "test-diffs": "npm test | tap-difflet",
    "cover": "nyc npm test",
    "docs": "esdoc",
    "prepublishOnly": "npm run lint && npm run test && npm run docs",
    "clean": "rimraf .nyc_output docs && rimraf tests/**/*-out.*"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/stencila/convert#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/convert.git"
  },
  "bugs": {
    "url": "https://github.com/stencila/convert/issues"
  },
  "dependencies": {
    "bin-version-check": "^3.0.0",
    "bin-wrapper": "^3.0.2",
    "cheerio": "^1.0.0-rc.2",
    "doctrine": "^2.0.0",
    "glob": "^7.1.2",
    "js-beautify": "^1.7.4",
    "js-yaml": "^3.10.0",
    "memfs": "^2.5.8",
    "mkdirp": "^0.5.1",
    "xlsx": "^0.11.13",
    "yaml-front-matter": "^3.4.0"
  },
  "devDependencies": {
    "esdoc": "^1.0.4",
    "esdoc-node": "^1.0.3",
    "esdoc-standard-plugin": "^1.0.0",
    "nyc": "^11.6.0",
    "rimraf": "^2.6.2",
    "standard": "^10.0.3",
    "tap-difflet": "^0.7.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.8.0",
    "tmp": "0.0.33"
  },
  "esdoc": {
    "source": "./src",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-standard-plugin"
      },
      {
        "name": "esdoc-node"
      }
    ]
  },
  "nyc": {
    "exclude": [
      "tests"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
