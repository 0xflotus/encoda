{
  "name": "stencila-convert",
  "version": "0.29.4",
  "description": "Converters for Stencila components",
  "main": "src/index.js",
  "bin": "./bin/stencila-convert.js",
  "scripts": {
    "setup": "node -e 'require(\"./src/helpers/pandoc\").get()'",
    "check": "dependency-check ./package.json && dependency-check ./package.json --unused --no-dev",
    "lint": "standard",
    "test": "tape \"tests/**/*.test.js\" | tap-spec",
    "test-one": "tape",
    "test-diffs": "npm test | tap-difflet",
    "cover": "nyc npm test",
    "docs": "esdoc",
    "prepublishOnly": "npm run lint && npm run test && npm run check && npm run docs",
    "clean": "rimraf .nyc_output docs tests/**/*-out.*"
  },
  "license": "Apache-2.0",
  "homepage": "https://github.com/stencila/convert#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stencila/convert.git"
  },
  "bugs": {
    "url": "https://github.com/stencila/convert/issues"
  },
  "dependencies": {
    "bin-version-check": "^3.0.0",
    "bin-wrapper": "^3.0.2",
    "cheerio": "^1.0.0-rc.2",
    "glob": "^7.1.2",
    "js-beautify": "^1.7.5",
    "js-yaml": "^3.12.0",
    "memfs": "^2.9.0",
    "mkdirp": "^0.5.1",
    "tmp": "^0.0.33",
    "xlsx": "^0.13.0",
    "yaml-front-matter": "^4.0.0"
  },
  "devDependencies": {
    "dependency-check": "^3.1.0",
    "esdoc": "^1.1.0",
    "esdoc-node": "^1.0.3",
    "esdoc-standard-plugin": "^1.0.0",
    "nyc": "^13.0.0",
    "rimraf": "^2.6.2",
    "standard": "^11.0.1",
    "tap-difflet": "^0.7.1",
    "tap-spec": "^5.0.0",
    "tape": "^4.9.1"
  },
  "esdoc": {
    "source": "./src",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-standard-plugin"
      },
      {
        "name": "esdoc-node"
      }
    ]
  },
  "nyc": {
    "exclude": [
      "tests"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
